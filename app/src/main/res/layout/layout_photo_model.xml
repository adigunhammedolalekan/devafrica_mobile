<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="120dp"
    android:layout_height="120dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@color/divider"
        android:scaleType="centerCrop"
        android:id="@+id/iv_photo_photo_model"
        android:layout_margin="5dp"/>
    <ImageButton
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/ic_clear_photo_photo_model"
        android:layout_gravity="right|top|end"
        android:src="@drawable/met_ic_clear"
        android:layout_margin="5dp"/>
</FrameLayout>