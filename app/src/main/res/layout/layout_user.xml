<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="0dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:id="@+id/iv_user_layout_user"
            android:src="@color/divider"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/iv_user_layout_user"
            android:layout_toEndOf="@+id/iv_user_layout_user"
            android:layout_centerVertical="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="adigunHammed"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textAppearance="@style/BoldText"
                android:textColor="@color/textColorPrimary"
                android:id="@+id/tv_username_layout_user"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-2dp"
                android:text="~ am a nerd"
                android:textSize="12sp"
                android:textStyle="normal"
                android:id="@+id/tv_bio_user_layout"
                android:textColor="@color/textColorSecondary"/>
        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:text="FOLLOW"
            android:textSize="12sp"
            android:background="@drawable/btn_bg"
            android:id="@+id/btn_follow"
            android:visibility="visible"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_alignParentRight="true" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/iv_user_layout_user"
            android:layout_toEndOf="@+id/iv_user_layout_user"
            android:background="@color/divider"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>